@{
    ViewBag.SECTION = "基础数据";
    ViewBag.FUNCTION = "酒店管理";
}
@section DatatableCSS{
    @Styles.Render("~/Content/plugins/dataTablesCss")
}
@section DatatableJS{
    @Scripts.Render("~/bundles/plugins/dataTablesJs")
}
@section PageJS{
    <script src="../../Scripts/pages/hotallist.js?v=@System.Configuration.ConfigurationManager.AppSettings["version"]"></script>
}
<div class="tabletools">
    <div class="left">
        <div style="min-height:40px;">
            <span class="leftlabel">
                <span class="border-left"></span>基础数据
            </span>
            <div class="btn-group">
                <a type="button" href="~/Currencies/Index" class="btn button86 btn-sm btn-default" style="border-top-left-radius: 5px;border-bottom-left-radius: 5px;">
                    货币
                </a>
                <a type="button" href="~/Countries/Index" class="btn button86 btn-sm btn-default">
                    国家区域
                </a>
                <a type="button" href="~/Hotals/Index" class="btn button86  btn-sm btn-primary actas">
                    酒店
                </a>
                <a type="button" href="~/OrderSourses/Index" class="btn button86 btn-sm btn-default" style="border-top-right-radius: 5px;border-bottom-right-radius: 5px;">
                    订单来源
                </a>
            </div>
            <span class="rightbar">
                <button id="reflashTable" type="button" class="btn btn-default btn-sm button70"><i class="glyphicon glyphicon-refresh"></i>刷新</button>
                <a href="~/Hotals/Create" class="fixbuttonnew btn btn-sm btn-primary button65">新增</a>
            </span>
        </div>
        <div style="min-height:40px;">
            <span class="leftlabel font13">
                对<span id="selectedNumber" class="number">0</span>个选项：
            </span>
            <div id="operations" class="leftkeys" style="display:inline-block">
                <a href="javascript:" class="action btn btn-sm btn-default button65" data-next-code="delete">删除</a>
            </div>
            <span class="rightbar">
                <input placeholder="模糊搜索：酒店名称、电话、地址" href="javascript:;" id="fuzzyString" class="border-rounded rightbaritems searchipnut" />
                <a href="javascript:;" id="fuzzySearch" class="rightbaritems btn btn-sm btn-default button65 searchbutton"> 搜索 </a>
                <span style="border-left:1px solid black;display:inline-block;width:1px;height:30px"></span>
                <a href="javascript:;" id="exportproducts" class="rightbaritems btn btn-sm btn-default button65 searchbutton"> 导出 </a>
            </span>
        </div>
    </div>
</div>
<table class="table-lh table-lh-bordered-white table-lh-bordered-edge-remove ddtable" id="orderList">
    <thead>
        <tr>
            <th style="width:30px"><input type="checkbox" class="group-checkable"></th>
            <th style="width:100px">国家 </th>
            <th style="width:100px">省市 </th>
            <th style="width:100px">区域</th>
            <th style="width:300px">酒店名称</th>
            <th style="width:180px">电话</th>
            <th style="width:300px">地址</th>
            <th style="width:100px">操作</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>